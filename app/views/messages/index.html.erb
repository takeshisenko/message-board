<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


 <form class="form-horizontal">
   <%= form_for(@message) do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-10">
      <%= f.text_area :name %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">アイデア内容</label>
    <div class="col-sm-10">
     <%= f.text_area :body %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  <!-- Large button -->
  </div>
  <% end %>
</form>
